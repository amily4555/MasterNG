{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom"
        ],
        "paths": {
            "MasterNG": [
                "./src/lib"
            ]
        },
        "noResolve": false
    },
    "files": [
        "./src/lib/index.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "plugins": [
        {
            "name": "@angular/language-service"
        }
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true
    }
}
